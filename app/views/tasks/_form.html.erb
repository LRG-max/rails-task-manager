<div class="container mt-5">
  <h1 class="text-center mb-4">
  <i class="fa-solid fa-clipboard-list"></i> <%= task.new_record? ? "Créer une nouvelle tâche" : "Modifier la tâche" %>
</h1>

<div class="card shadow-sm p-4">
<%= form_with model: task do |f| %>
<div class="mb-3">
  <%= f.label :title, class:"form-label" %>
  <%= f.text_field :title, class:"form-control" %>
</div>

<div class="mb-3">
  <%= f.label :details, class:"form-label" %>
  <%= f.text_field :details, class:"form-control" %>

</div>
  <% unless task.new_record? %>
    <div class="mb-3 form-check">
      <%= f.label :completed, class:"form-check-label ms-2" %>
      <%= f.check_box :completed, class: "form-check-input" %>
    </div>
  <% end %>
  <div class="mt-4 d-flex justify-content-between">
  <%= link_to "Annuler", tasks_path, class: "btn btn-outline-secondary" %>
  <%= f.submit task.new_record? ? "Créer la tâche" : "Mettre à jour", class: "btn btn-primary" %>
</div>
<% end %>
</div>
</div>
